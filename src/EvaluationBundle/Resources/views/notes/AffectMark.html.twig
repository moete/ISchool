{% extends 'base.html.twig' %}
{% block body %}
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<div class="dashboard-content-one">
    <!-- Breadcubs Area Start Here -->
    <div class="breadcrumbs-area">
        <h3>All Grades</h3>

    </div>
    <!-- Breadcubs Area End Here -->
    <!-- Class Routine Area Start Here -->
    <div class="row">
        <div class="col-4-xxxl col-12">
            <div class="card height-auto">
                <div class="card-body">
                    <form class="mg-b-20">
                        <div class="row gutters-8">

                            <div class="col-4-xxxl col-xl-4 col-lg-3 col-12 form-group">
                                <input id="searchName"  name="searchName" type="text" placeholder="Search by Name ..." class="form-control">
                            </div>
                            <div class="col-3-xxxl col-xl-3 col-lg-3 col-12 form-group">

                            </div>
                            <div class="col-4-xxxl col-xl-3 col-lg-3 col-12 form-group">

                            </div>




                        </div>
                    </form>
                    <div class="heading-layout1">
                        <div class="item-title">
                            <h3>Add Grades </h3>
                        </div>
                        <br><br>
                    </div>
                    {% block update %}
                        <form class="new-added-form" method="post" novalidate>
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}
                            <div class="row">
                                <div class="col-xl-3 col-lg-6 col-12 form-group">
                                    <label>Student</label>
                                    {% if form_errors(form.student)|length <= 0 %}
                                        {{ form_widget (form.student , {'attr': {'class':'select2'}}) }}
                                    {% else %}
                                        {{ form_widget (form.student , {'attr': {'class':'select2'}}) }}
                                        <div class="invalid-feedback">
                                            {{ form_errors(form.student) }}
                                        </div>
                                    {% endif %}
                                </div>

                                <div class="col-xl-3 col-lg-6 col-12 form-group">
                                    <label>DS Note</label>
                                    {% if form_errors(form.noteds)|length <= 0 %}
                                        {{ form_widget (form.noteds , {'attr': {'class':'form-control'}}) }}
                                    {% else %}
                                        {{ form_widget (form.noteds , {'attr': {'class':'form-control is-invalid'}}) }}
                                        <div class="invalid-feedback">
                                            {{ form_errors(form.noteds) }}
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="col-xl-3 col-lg-6 col-12 form-group">
                                    <label>Exam Note</label>
                                    {% if form_errors(form.noteexamen)|length <= 0 %}
                                        {{ form_widget (form.noteexamen , {'attr': {'class':'form-control'}}) }}
                                    {% else %}
                                        {{ form_widget (form.noteexamen , {'attr': {'class':'form-control is-invalid'}}) }}
                                        <div class="invalid-feedback">
                                            {{ form_errors(form.noteexamen) }}
                                        </div>
                                    {% endif %}
                                </div>

                                <div class="col-xl-3 col-lg-6 col-12 form-group">
                                    <label>CC</label>
                                    {% if form_errors(form.cC)|length <= 0 %}
                                        {{ form_widget (form.cC, {'attr': {'class':'form-control'}}) }}
                                    {% else %}
                                        {{ form_widget (form.cC, {'attr': {'class':'form-control is-invalid'}}) }}
                                        <div class="invalid-feedback">
                                            {{ form_errors(form.cC) }}
                                        </div>
                                    {% endif %}
                                </div>
                                {% if form_errors(form.cC)|length <= 0 %}
                                <div class="col-xl-3 col-lg-6 col-12 form-group">
                                    <label>Subject *</label>

                                    {{ form_widget (form.subject , {'attr': {'class':'select2'}}) }}
                                    {% else %}
                                    <div class="col-xl-3 col-lg-6 col-12 form-group has-error">
                                        <label>Subject *</label>

                                        {{ form_widget (form.subject , {'attr': {'class':'select2 '}}) }}
                                        <span class="text-red">
                                          Insert a note to a subject
                                         </span>

                                        {% endif %}

                                    </div>

                                    <div class="col-xl-3 col-lg-6 col-12 form-group">

                                    </div>

                                </div>

                                {{ form_widget(form.Affect) }}
                                {{ form_widget(form.Reset) }}
                                {{ form_end(form, {'render_rest': false}) }}
                        </form>
                    {% endblock %}
                </div>
            </div>
        </div>
        <div class="col-8-xxxl col-12">
            <div class="card height-auto">
                <div class="card-body">



                    <script type="text/javascript">
                        jQuery(document).ready(function() {
                            var searchRequest = null;

                            $("#searchName").keyup(function () {
                                var minlength = 1;
                                var that = this;
                                var value = $(this).val();
                                var entitySelector = $("#searchResult").html('');


                                if (value.length >= minlength) {
                                    if (searchRequest != null)
                                        searchRequest.abort();
                                    searchRequest = $.ajax({
                                        type: "GET",
                                        url:"{{ path('admin_searchSubject') }}",
                                        data: {
                                            'searchName': value
                                        },
                                        dataType: "text",
                                        success: function (msg) {
                                            //we need to check if the value is the same
                                            if (value === $(that).val()) {
                                                var result = JSON.parse(msg);

                                                $.each(result, function (key, arr) {
                                                    $.each(arr, function (id, value) {
                                                        if (key === 'subjects') {
                                                            if (id !== 'error') {

                                                                var assetsBaseDir = "{{ asset('img/figure/user.jpg') }}";
                                                                var large =
                                                                    ' <tr>' +
                                                                    '<td> <div class="form-check"> <input type="checkbox" class="form-check-input"> <label class="form-check-label">#' + value[0] + '</label> </div> </td>' +
                                                                    ' <td>' + value[1] + '</td> ' +
                                                                    ' <td>' + value[2] + '</td> ' +
                                                                    '<td>2B</td> ' +

                                                                    '</tr> ';
                                                                entitySelector.append(large);
                                                            } else {
                                                                entitySelector.append('<li class="errorLi">' + value + '</li>');

                                                            }
                                                        }

                                                    });
                                                });
                                            }
                                        }
                                    });
                                }else {location.reload(false);}
                            });

                        });
                    </script>


                    <div class="table-responsive">
                        <table class="table display data-table text-nowrap">
                            <thead>
                            <tr>
                                <th>
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input checkAll">
                                        <label class="form-check-label">Note ID</label>
                                    </div>
                                </th>
                                <th>Student Name</th>
                                <th>DS Note</th>
                                <th>Exam Note</th>
                                <th> CC Note</th>
                                <th> Subject</th>



                                <th></th>
                            </tr>
                            </thead>
                            <tbody id="searchResult">
                            {% for as in allNotes %}
                                <tr >

                                  <td>{{  as.id }}</td>
                                    <td>{{ as.student }}</td>
                                    <td>{{ as.noteds }}</td>
                                    <td>{{ as.noteexamen }}</td>
                                    <td> {{ as.cC }}</td>
                                    <td>{{ as.subject }}</td>






                                    <td>
                                        <div class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                                               aria-expanded="false">
                                                <span class="flaticon-more-button-of-three-dots"></span>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a class="dropdown-item" href="{{ path('admin_DeleteSubject',{'id':as.id}) }}"><i
                                                            class="fas fa-times text-orange-red"></i>Delete</a>
                                                <a class="dropdown-item"  href="{{ path('admin_UpdateSubject',{'id':as.id}) }}"><i
                                                            class="fas fa-cogs text-dark-pastel-green"></i>Update</a>

                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}
    {% block jq %}
    {% endblock %}