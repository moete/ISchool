{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    {% if error is defined %}
        <div></div>
    {% endif %}
<div class="container-scroller">
<div class="content-wrapper d-flex align-items-center auth">

    <div class="col-lg-4 mx-auto">
<div class="auth-form-light text-left p-5">

<h4>Bienvenue Ã  ISCHOOL</h4>
    <h6 class="font-weight-light">Veuillez Connecter</h6>
    <form  class="pt-3" action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="form-group">
        <label for="username">{{ 'username'|trans }}</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
        </div>
        <div class="form-group">
        <label for="password">{{ 'password'|trans }}</label>
        <input class="form-control" type="password" id="password" name="_password" required="required" autocomplete="current-password" />
        </div>
        <div class="mt-3">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'remember_me'|trans }}</label>
            <input type="submit"  class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" id="_submit" name="_submit" value="{{ 'submit'|trans }}" />
        </div>
    </form>
</div>
    </div>
</div>
</div>

    {% endblock %}



